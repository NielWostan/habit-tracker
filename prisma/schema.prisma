// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id Int @id @default(autoincrement())
  name String?
  email String? @unique
  password String?
  habits Habits[]
}

model Habits {
  id Int @id @default(autoincrement())
  title String?
  day1 Boolean
  day2 Boolean
  day3 Boolean
  day4 Boolean
  day5 Boolean
  day6 Boolean
  day7 Boolean
  project User @relation(fields: [projectId], references: [id])
  projectId Int
}